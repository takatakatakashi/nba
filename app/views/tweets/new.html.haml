.contents.row
  .container
    = form_with(model: @tweet, local: true) do |form|
      %h3
        投稿する
      = form.text_area :title, placeholder: "タイトルを入力してください"
      = form.text_field :image, placeholder: "画像URL"
      = form.text_area :text, placeholder: "文字を入力してください" , rows: "10"
      = form.submit "投稿する"
