.contents.row
  - @tweets.each do |tweet|
    - if tweet.image?
    = image_tag tweet.image, :size =>'410x300'
      .text
        = simple_format(tweet.text)
        .bottom
          = link_to '削除', "/tweets", method: :delete, data: { confirm: '削除しますか?' }, :style => "border: 4px solid #82636b; border-radius: 240px 15px 185px 15px / 15px 200px 15px 185px; margin: 2em 0; padding: 2em;"
          